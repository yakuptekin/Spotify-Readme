<svg width="400" height="150" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="400" height="150">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>
                .main {
                    width: 350px;
                    height: 130px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: rgb(37, 37, 37);
                    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                    border-radius: 10px;
                    padding: 0 15px;
                }
                .currentStatus {
                    float: left;
                    font-size: 24px;
                    position: static;
                    margin-top: -5px;
                    margin-left: 10px;
                }
                .container {
                    width: 400px;
                    height: 150px;
                    border-radius: 10px;
                    background-color:#000000;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
                .content {
                    width: 71%;
                    position: relative;
                    height: 103px;
                    overflow: hidden;
                    left:10px
                }
                .song {
                    color: #fff;
                    overflow: hidden;
                    font-size: 23px;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    font-weight: bold;
                    line-height: 28px;
                    width: 215px;
                }
                .artist {
                    color: #fff;
                    font-size: 11px;
                    margin-top: 5px;
                    line-height: 13px;
                    font-style: normal;
                    font-weight: normal;
                }
                .cover {
                    width: 103px;
                    height: 103px;
                    border-radius: 10px;
                    overflow: hidden;
                }
                .cover img{
                    width: 100%;
                    height: 100%;
                }
                #bars {
                    width: 30px;
                    height: 30px;
                    bottom: 12px;
                    position: absolute;
                    margin: -20px 0 0 0px;
                }
                #bars-reflecting{
                    -webkit-transform: scaleY(-1);
                    -moz-transform: scaleY(-1);
                    -o-transform: scaleY(-1);
                    -ms-transform: scaleY(-1);
                    transform: scaleY(-1);
                    width: 30px;
                    height: 30px;
                    bottom: -17px;
                    position: absolute;
                    margin: -20px 0 0 0px;
                    opacity: 0.3;
                }
                .bar {
                    width: 2px;
                    border-radius: 25%;
                    bottom: 1px;
                    height: 3px;
                    position: absolute;
                    background: #F84242;
                    animation: sound 0ms -800ms linear infinite alternate;
                }
                .spotify{
                    position: absolute;
                    width: 25px;
                    height: auto;
                    right: 5px;
                    top: 0px;
                }
                div {
                    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
                }
                @keyframes sound {
                    0% {
                        height: 3px;
                        opacity: .35;
                    }

                    100% {
                        height: 15px;
                        opacity: 0.95;
                    }
                }
                {{barCSS|safe}}
            </style>

            <div class="currentStatus">{{status}}</div>
            <div class="main">
                <a class="cover" href="{}" target="_blank">
                    <img src="data:image/png;base64, {{image}}" />
                </a>

                <div class="content">
                    <img class="spotify" src="spotify_icon.png" alt="Spotify">
                    <div class="song">{{songName}}</div>
                    <div class="artist">{{artistName}}</div>
                    <div id="bars">{{contentBar|safe}}</div>
                    <div id="bars-reflecting">{{contentBar|safe}}</div>
                </div>
            </div>

        </div>
    </foreignObject>
</svg>
